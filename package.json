{
  "name": "pet-webpack-react-ts-storybook",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "lint:stylelint": "stylelint \"src/**/*.css\"",
    "lint:eslint": "eslint ./src --ext .tsx,.ts,.js,.jsx",
    "lint:fix": "eslint ./src --ext .tsx,.ts,.js,.jsx --fix",
    "format:prettier": "prettier --write \"src/**/*.{tsx,ts,jsx,js,json,css}\"",
    "prepare": "husky install .husky && npm set-script prepare:lint-staged \"lint-staged\"",
    "prepare:lint-staged": "lint-staged",
    "start": "webpack-dev-server --open --hot --port 3000 --config webpack.dev.js",
    "build": "webpack --config webpack.prod.js",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook"
  },
  "lint-staged": {
    "*.tsx, *.ts, *.jsx, *.js": [
      "npm run lint:eslint",
      "npm run format:prettier",
      "git add"
    ],
    "*.css": [
      "npm run lint:stylelint",
      "npm run format:prettier",
      "git add"
    ],
    "*.{json,md}": [
      "npm run format:prettier",
      "git add"
    ]
  },
  "browser": {
    "./src": "./src"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint-staged",
      "pre-push": "npm run build"
    }
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "storybook": "^6.5.16"
  },
  "devDependencies": {
    "@babel/core": "^7.21.0",
    "@babel/plugin-transform-runtime": "^7.21.4",
    "@babel/preset-env": "^7.20.2",
    "@babel/preset-react": "^7.18.6",
    "@babel/preset-typescript": "^7.21.0",
    "@storybook/addon-actions": "^6.5.16",
    "@storybook/addon-docs": "^6.5.16",
    "@storybook/addon-essentials": "^6.5.16",
    "@storybook/addon-interactions": "^6.5.16",
    "@storybook/addon-links": "^6.5.16",
    "@storybook/builder-webpack5": "^6.5.16",
    "@storybook/manager-webpack5": "^6.5.16",
    "@storybook/preset-typescript": "^3.0.0",
    "@storybook/react": "^6.5.16",
    "@storybook/testing-library": "^0.0.13",
    "@svgr/webpack": "^7.0.0",
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "@typescript-eslint/eslint-plugin": "^5.53.0",
    "@typescript-eslint/parser": "^5.53.0",
    "babel-loader": "^9.1.2",
    "css-loader": "^6.7.3",
    "eslint": "^8.34.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-config-standard-with-typescript": "^34.0.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-n": "^15.6.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "eslint-plugin-storybook": "^0.6.11",
    "eslint-webpack-plugin": "^4.0.0",
    "file-loader": "^6.2.0",
    "fork-ts-checker-webpack-plugin": "^8.0.0",
    "html-webpack-plugin": "^5.5.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.0",
    "new-url-loader": "^0.1.1",
    "node-sass": "^8.0.0",
    "prettier": "^2.8.4",
    "react-docgen-typescript": "^2.2.2",
    "react-docgen-typescript-webpack-plugin": "^1.1.0",
    "style-loader": "^3.3.2",
    "stylelint": "^15.2.0",
    "stylelint-webpack-plugin": "^4.1.0",
    "ts-loader": "^9.4.2",
    "tsconfig-paths-webpack-plugin": "^4.0.1",
    "typescript": "^4.9.5",
    "url-loader": "^4.1.1",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1",
    "webpack-dev-server": "^4.11.1",
    "webpack-merge": "^5.8.0"
  }
}
